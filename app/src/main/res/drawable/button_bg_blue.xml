    <!-- Màu nền của drawable -->
    <solid android:color="@color/sky_blue" /> <!-- Màu xanh dương -->
    <!-- Góc cong của drawable -->
    <corners android:radius="10dp" /> <!-- Góc cong lớn hơn -->
    <!-- Đường viền của drawable -->
