<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlueButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>

        <item name="android:textSize">20dp</item>

    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">205dp</item>
        <item name="android:layout_height">163dp</item>
        <item name="android:stateListAnimator">@null</item> <!-- Disable default elevation animation -->
    </style>

    <style name="GreenButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="YellowButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/yellow_button_background</item>
    </style>


</resources>


